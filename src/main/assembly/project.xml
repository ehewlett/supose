<assembly>
	<id>project</id>
	<formats>
		<format>tar.gz</format>
		<format>tar.bz2</format>
		<format>zip</format>
	</formats>
	<baseDirectory>${artifactId}-${version}</baseDirectory>
	<fileSets>
		<fileSet>
			<directory>.</directory>
			<outputDirectory></outputDirectory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<excludes>
				<exclude>*.log</exclude>
				<exclude>bin/**</exclude>
				<exclude>**/target/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>
